@model IQueryable<Group>

@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Группы</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="Groups" asp-action="Edit" asp-route-id="">Добавить группу</a>
        </div>
        @if (Model.Any())
        {
                        <div>
                @foreach (Group entity in Model)
                {
                                            <div>
                                                        <a asp-area="Admin" asp-controller="Groups" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                                                |
                                                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Groups" asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@entity.Id">
                                                    <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                                                </form>
                                                |
                                                        <a asp-area="" asp-controller="Groups" asp-action="Index" asp-route-id="@entity.Id">
                            @($"{entity.Name}")
                                                </a>
                                            </div>
                }
                        </div>
        }
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>
