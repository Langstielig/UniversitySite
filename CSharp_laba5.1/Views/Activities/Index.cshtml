@model IQueryable<Activity>

<div>
    <div>
        <h3>Студенческие группы</h3>
        <div class="div-box">
            <a asp-area="" asp-controller="Activities" asp-action="Edit" asp-route-id="">Добавить студенческую группу</a>
        </div>
        @if (Model.Any())
        {
                                <div>
                @foreach (Activity entity in Model)
                {
                    <div>
                        <a asp-area="" asp-controller="Activities" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                        |
                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="" asp-controller="Activities" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@entity.Id">
                        <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                        </form>
                        |
                        <a asp-area="" asp-controller="Activities" asp-action="Index" asp-route-id="@entity.Id">
                        <a asp-area="" asp-controller="Activities" asp-action="AddStudent" asp-route-id="@entity.Id">Добавить студента</a>
                        <a asp-area="" asp-controller="Activities" asp-action="DeleteStudent" asp-route-id="@entity.Id">Удалить студента</a>
                            @($"{entity.Id}")@($"{entity.Name}")
                        </a>
                     </div>
                }
        </div>
        }
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>
