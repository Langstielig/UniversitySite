@model ClassForName
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="" asp-controller="Activities" asp-action="AddStudent" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label>Имя</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="div-box">
                <label>Фамилия</label>
                <input asp-for="Surname" />
                <span asp-validation-for="Surname"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>
