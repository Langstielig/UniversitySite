@model IQueryable<StudentActivity>

<div>
    <div>
        <h3>Таблица соответствий студентов и студенческих групп</h3>
        <div class="div-box">
            <a asp-area="" asp-controller="StudentActivities" asp-action="Edit" asp-route-id="">Добавить связь</a>
        </div>
        @if (Model.Any())
        {
                <div>
                @foreach (StudentActivity entity in Model)
                {
                    <div>
                    <a asp-area="" asp-controller="StudentActivities" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                    |
                    <form style="display: inline-block;" id="form-@entity.Id" asp-area="" asp-controller="StudentActivities" asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@entity.Id">
                    <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                    </form>
                    |
                    <a asp-area="" asp-controller="StudentActivities" asp-action="Index" asp-route-id="@entity.Id">
                    @if(entity.Student != null) {
                        @($" имя студента {entity.Student.Name}")
                    }
                    @($" id студента - {entity.StudentId},")@*@($"имя студента: {entity.Student.Name}")*@@($" id студенческой группы - {entity.ActivityId}")@*@($"студенческой группы {entity.Activity.Name}")*@
                    </a>
                    </div>
                }
                </div>
        }
    </div>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>
